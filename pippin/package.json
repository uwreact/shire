{
  "name": "pippin",
  "version": "1.0.0",
  "description": "Google Cloud Functions for merry",
  "author": "UW REACT <director@uwreact.ca>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "logs": "firebase functions:log",
    "test": "jest",
    "build": "yarn build:development",
    "build:development": "NODE_ENV=development webpack --mode production",
    "build:staging": "NODE_ENV=staging webpack --mode production",
    "build:production": "NODE_ENV=production webpack --mode production",
    "analyze": "yarn build --anaylze",
    "deploy": "yarn deploy:development",
    "deploy:development": "yarn build:development && firebase use shire-development && firebase deploy --only functions",
    "deploy:staging": "yarn build:staging && firebase use shire-staging && firebase deploy --only functions",
    "deploy:production": "yarn build:production && firebase use shire-production && firebase deploy --only functions"
  },
  "devDependencies": {
    "@babel/cli": "~7.1.0",
    "@babel/core": "~7.1.0",
    "@babel/preset-env": "~7.1.0",
    "babel-eslint": "~9.0.0",
    "babel-jest": "~23.6.0",
    "babel-loader": "~8.0.2",
    "babel-plugin-module-resolver": "~3.1.1",
    "babel-plugin-transform-imports": "~1.5.0",
    "clean-webpack-plugin": "~0.1.19",
    "copy-webpack-plugin": "~4.5.2",
    "dotenv-webpack": "~1.5.7",
    "eslint": "~5.6.0",
    "eslint-config-airbnb": "~17.1.0",
    "eslint-config-prettier": "~3.0.1",
    "eslint-import-resolver-babel-module": "~5.0.0-beta.1",
    "eslint-loader": "~2.1.1",
    "eslint-plugin-import": "~2.14.0",
    "eslint-plugin-jest": "~21.22.0",
    "eslint-plugin-prettier": "~2.6.2",
    "firebase-tools": "~4.2.0",
    "jest": "~23.6.0",
    "prettier": "~1.14.3",
    "uglifyjs-webpack-plugin": "~2.0.1",
    "webpack": "~4.19.1",
    "webpack-bundle-analyzer": "~3.0.2",
    "webpack-cli": "~3.1.0",
    "webpack-node-externals": "~1.7.2",
    "webpack-shell-plugin-next": "~0.6.4"
  },
  "dependencies": {
    "axios": "~0.18.0",
    "firebase-admin": "~6.0.0",
    "firebase-functions": "~2.0.5",
    "ramda": "~0.25.0",
    "xml-js": "~1.6.8"
  }
}
