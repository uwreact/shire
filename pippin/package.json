{
  "name": "pippin",
  "version": "1.0.0",
  "description": "Google Cloud Functions for merry",
  "author": "UW REACT <director@uwreact.ca>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "logs": "firebase functions:log",
    "test": "jest",
    "build": "yarn build:development",
    "build:development": "NODE_ENV=development webpack --mode production",
    "build:staging": "NODE_ENV=staging webpack --mode production",
    "build:production": "NODE_ENV=production webpack --mode production",
    "analyze": "yarn build --anaylze",
    "deploy": "firebase deploy --only functions",
    "deploy:development": "yarn build:development && firebase use development && yarn deploy",
    "deploy:staging": "yarn build:staging && firebase use staging && yarn deploy",
    "deploy:production": "yarn build:production && firebase use production && yarn deploy"
  },
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.3",
    "babel-eslint": "~9.0.0",
    "babel-jest": "~23.4.2",
    "babel-loader": "~8.0.2",
    "babel-plugin-module-resolver": "~3.1.1",
    "babel-plugin-ramda": "~1.6.3",
    "babel-preset-env": "~1.7.0",
    "babel-preset-stage-0": "~6.24.1",
    "clean-webpack-plugin": "~0.1.19",
    "copy-webpack-plugin": "~4.5.2",
    "dotenv-webpack": "~1.5.7",
    "eslint": "~5.5.0",
    "eslint-config-airbnb": "~17.1.0",
    "eslint-import-resolver-babel-module": "~4.0.0",
    "eslint-loader": "~2.1.0",
    "eslint-plugin-import": "~2.14.0",
    "eslint-plugin-jest": "~21.22.0",
    "eslint-plugin-jsx-a11y": "~6.1.1",
    "firebase-tools": "~4.2.0",
    "jest": "~23.5.0",
    "regenerator-runtime": "~0.12.1",
    "uglifyjs-webpack-plugin": "~1.3.0",
    "webpack": "~4.17.1",
    "webpack-bundle-analyzer": "~2.13.1",
    "webpack-cli": "~3.1.0",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin-next": "~0.6.4"
  },
  "dependencies": {
    "firebase-admin": "~6.0.0",
    "firebase-functions": "~2.0.5"
  }
}
